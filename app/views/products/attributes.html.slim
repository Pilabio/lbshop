- content_for :title do 'Adicionar atributos' end

#accordion
  - @attributes.each do |key, value|
    .card.index-card
      #headingOne.card-header data-target="#collapse#{key}" data-toggle="collapse"
        .card-header--name
          h5.mb-0 = "#{I18n.t("views.product.#{key}")}"
        icon.header-icon.material-icons keyboard_arrow_down
      .collapse id="collapse#{key}" aria-labelledby="headingOne" data-parent="#accordion"
        .card-body.index-card--body
          .card-text = value.split(' ').join(', ')
          span.card-divisor

          = simple_form_for(@user, url: add_attributes_path(product_attr: key), method: :post, html: { id: "js-#{key}-inline-form" }) do |f|
            .input-group
              = f.input :products_attr_lists, as: :hidden, label: false, input_html: { class: "js-input--hidden" }
              input.form-control class="js-input" placeholder="Adicionar atributo(s)" type="text"
              .input-group-append
                a class="js-submit-link" href="#" data-key="#{key}"
                  i.material-icons.input-group-text add

              = link_to delete_attribute_path(attribute: key), method: :post, class: 'btn-icon btn btn-secondary'
                i.icon.material-icons delete_forever
